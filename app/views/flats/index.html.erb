
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All flats</p>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://source.unsplash.com/OttUMTivRVc/w=1200')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
              <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
               <i class="fas fa-euro-sign"></i><span><%= flat.price_per_night %></span>
              </div>
              <div class="flex ms-3">
                <i class="material-icons me-2"></i><%= flat.number_of_guests %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More Info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "ms-3 text-warning" %>
            <%= link_to "Remove", flat_path(flat), class:"ms-3 text-danger", method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
  <% end %>
